<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pingchang.spzx.manager.mapper.SysRoleMapper">

    <!--  映射查询到的字段 -->
    <resultMap id="sysRoleMap" type="com.pingchang.spzx.model.entity.system.SysRole" autoMapping="true"/>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>

    <sql id="findPageWhere">
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name like CONCAT('%',#{roleName},'%')
            </if>
            and is_deleted = 0
        </where>
    </sql>

    <!-- 新增角色 -->
    <insert id="saveSysRole">
        insert into sys_role (
        id,
        role_name,
        role_code,
        description
        ) values (
        #{id},
        #{roleName},
        #{roleCode},
        #{description}
        )
    </insert>

    <update id="deleteSysRole">
        update sys_role set is_deleted = 1 where id = #{roleId}
    </update>
    <!-- 修改角色 -->
    <update id="updateSysRole">
        update sys_role set
        <if test="roleName != null and roleName != ''">
            role_name = #{roleName},
        </if>
        <if test="roleCode != null and roleCode != ''">
            role_code = #{roleCode},
        </if>
        <if test="description != null and description != ''">
            description = #{description},
        </if>
        update_time = now()
        where
        id = #{id}
    </update>
    <select id="findByPage" resultMap="sysRoleMap">
        select
        <include refid="columns"/>
        from sys_role
        <include refid="findPageWhere"/>

        order by id desc
    </select>
    <select id="findAll" resultType="com.pingchang.spzx.model.entity.system.SysRole">
            select <include refid="columns"/>
         from sys_role where is_deleted = 0
    </select>

</mapper>